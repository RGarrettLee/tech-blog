<div class="row">
  <div class="col-md-6">
    <h2>Login</h2>
{{!-- Login --}}
    <form class="form login-form" id="login-form">
      <div class="form-group">
        <label for="username-login" class="text-white">Username:</label>
        <input class="form-input" type="text" id="username-login" />
      </div>
      <div class="form-group">
        <label for="password-login" class="text-white">password:</label>
        <input class="form-input" type="password" id="password-login" />
      </div>
      <div class="form-group">
        <button class="btn btn-primary" id="login-btn" type="submit">login</button>
      </div>
    </form>
  </div>
  <div class="col-md-6">
    <h2>Signup</h2>
{{!-- Sign Up --}}
    <form class="form signup-form" id="signup-form">
      <div class="form-group">
        <label for="name-signup" class="text-white">Username:</label>
        <input class="form-input"type="text" id="username-signup" />
      </div>
      <div class="form-group">
        <label for="password-signup" class="text-white">password:</label>
        <input class="form-input" type="password" id="password-signup" />
      </div>
      <div class="form-group">
        <button class="btn btn-primary"  id="signup-btn" type="submit">signup</button>
      </div>
    </form>
  </div>
</div>

