<!-- used to create cards for each post that exists in the database: preferable 2 columns -->
<div class="col-lg-12 mb-3 d-flex justify-content-center align-items-stretch">
    <div class="card text-start bg-white text-dark" style="width: 90rem;">
        <div class="card-body">
            <h3 class="card-title">{{title}}</h3>
            <h5 class="card-text">by {{user.username}}</h5>
            <h6 class="card-text">on {{date}}</h6>
            <p class="card-text">{{content}}</p>
        </div>
    </div>
</div>
